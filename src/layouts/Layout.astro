---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PerformanceMonitor from '../components/PerformanceMonitor.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	lang?: string;
}

const { 
	title = SITE_TITLE, 
	description = SITE_DESCRIPTION, 
	image,
	lang = 'en' // Default to English, but allow override
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} image={image} />
		
		<!-- AdSense Debug Script -->
		<script is:inline>
			console.log('AdSense script loaded in head');
			window.addEventListener('load', function() {
				console.log('Window loaded, checking for AdSense:', 
					typeof window.adsbygoogle !== 'undefined' ? 'AdSense found' : 'AdSense not found');
			});
		</script>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<slot />
		</main>
		<Footer />
		<PerformanceMonitor />
	</body>
</html>